<Window x:Class="Speed.RulesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Speed"
        mc:Ignorable="d"
        Title="Rules" Height="700" Width="600" ResizeMode="CanMinimize" Background="#FFAEFF62">
    <Grid>
        <Label Content="Rules - Speed Card Game" HorizontalAlignment="Center" Margin="0,11,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Heavy" FontSize="40" Foreground="#FF193A0D"/>
        <Button x:Name="BtnBack" Content="Go Back" HorizontalAlignment="Left" Margin="416,608,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Heavy" FontSize="24" Width="140" Height="35" Background="#FF26482B" Foreground="#FFC5FF33" BorderBrush="White" BorderThickness="3,3,3,3" Click="BtnBack_Click" >
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Image x:Name="Image" Margin="22,97,22,97" Source="/cards/image.png" Stretch="Fill"/>

    </Grid>
</Window>
