<Window x:Class="Speed.AcceptGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Akceptacja gry" Height="150" Width="300">
    <Grid>
        <TextBlock Text="Czy chcesz grać z IP:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>
        <TextBlock x:Name="TxtIPAddress" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,30,10,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Tak" Width="75" Margin="5" Click="BtnYes_Click"/>
            <Button Content="Nie" Width="75" Margin="5" Click="BtnNo_Click"/>
        </StackPanel>
    </Grid>
</Window>